@model CadastroComp.Models.Cliente

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-danger">Excluir Cliente</h1>
<hr />
<p class="alert alert-warning">
    <strong>Tem certeza de que deseja excluir este cliente?</strong> Esta ação não pode ser desfeita.
</p>

<h4 class="text-primary">Detalhes do Cliente</h4>
<hr />
<dl class="row">
    <dt class="col-sm-3 font-weight-bold">
        @Html.DisplayNameFor(model => model.Nome)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.Nome)
    </dd>

    <dt class="col-sm-3 font-weight-bold">
        @Html.DisplayNameFor(model => model.DataNascimento)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.DataNascimento)
    </dd>

    <dt class="col-sm-3 font-weight-bold">
        @Html.DisplayNameFor(model => model.RG)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.RG)
    </dd>

    <dt class="col-sm-3 font-weight-bold">
        @Html.DisplayNameFor(model => model.CPF)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.CPF)
    </dd>

    <dt class="col-sm-3 font-weight-bold">
        @Html.DisplayNameFor(model => model.Logradouro)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.Logradouro)
    </dd>

    <dt class="col-sm-3 font-weight-bold">
        @Html.DisplayNameFor(model => model.CEP)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.CEP)
    </dd>

    <dt class="col-sm-3 font-weight-bold">
        @Html.DisplayNameFor(model => model.Cidade)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.Cidade)
    </dd>

    <dt class="col-sm-3 font-weight-bold">
        @Html.DisplayNameFor(model => model.UF)
    </dt>
    <dd class="col-sm-9">
        @Html.DisplayFor(model => model.UF)
    </dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <div class="mt-3">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Excluir
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar para a Lista
        </a>
    </div>
</form>
